@{
  Layout = "_Layout";
}

@model Tracker.Models.Restaurant

<h4>Add a new restaurant</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Location)
  @Html.TextBoxFor(model => model.Location)
  <input type="submit" value="Add new restaurant" />
}
<p>@Html.ActionLink("Show all restaurants", "Index")</p>